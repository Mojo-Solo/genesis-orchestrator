{
    "disaster_recovery": {
        "version": "1.0.0",
        "configuration_updated": "2024-12-15T00:00:00Z",
        "rto_target_minutes": 15,
        "rpo_target_minutes": 5,
        "compliance_requirements": [
            "SOC2_Type_II",
            "GDPR",
            "HIPAA",
            "PCI_DSS"
        ]
    },
    "backup_configuration": {
        "primary_region": "us-west-2",
        "replica_regions": ["us-east-1", "eu-west-1"],
        "s3_buckets": {
            "primary": "genesis-disaster-recovery",
            "replicas": {
                "us-east-1": "genesis-disaster-recovery-replica-us-east-1",
                "eu-west-1": "genesis-disaster-recovery-replica-eu-west-1"
            },
            "archives": "genesis-archives"
        },
        "backup_frequency": {
            "incremental_minutes": 5,
            "differential_minutes": 60,
            "full_hours": 6,
            "validation_hours": 2
        },
        "retention_policy": {
            "daily_backups_days": 30,
            "weekly_backups_weeks": 12,
            "monthly_backups_months": 12,
            "yearly_backups_years": 7
        },
        "encryption": {
            "algorithm": "AES-256-GCM",
            "key_rotation_days": 90,
            "kms_key_id": "alias/genesis-backup-key"
        }
    },
    "database_configuration": {
        "primary": {
            "host": "mysql-primary",
            "port": 3306,
            "database": "genesis_orchestrator",
            "replica_lag_threshold_seconds": 300
        },
        "replicas": {
            "us-east-1": {
                "host": "genesis-orchestrator-replica-us-east-1.us-east-1.rds.amazonaws.com",
                "read_only": true,
                "auto_promote": true
            },
            "eu-west-1": {
                "host": "genesis-orchestrator-replica-eu-west-1.eu-west-1.rds.amazonaws.com",
                "read_only": true,
                "auto_promote": true
            }
        },
        "backup_settings": {
            "point_in_time_recovery": true,
            "automated_backups": true,
            "backup_retention_days": 35,
            "maintenance_window": "03:00-04:00"
        }
    },
    "redis_configuration": {
        "primary": {
            "host": "redis-primary",
            "port": 6379,
            "persistence": "rdb_and_aof"
        },
        "replicas": {
            "us-east-1": {
                "host": "genesis-redis-us-east-1.cache.amazonaws.com",
                "port": 6379,
                "read_only": true
            },
            "eu-west-1": {
                "host": "genesis-redis-eu-west-1.cache.amazonaws.com",
                "port": 6379,
                "read_only": true
            }
        }
    },
    "failover_configuration": {
        "health_check_interval_seconds": 30,
        "failure_threshold": 3,
        "failover_cooldown_minutes": 30,
        "dns_management": {
            "route53_zone_id": "${ROUTE53_HOSTED_ZONE_ID}",
            "record_name": "api.genesis.orchestrator.com",
            "ttl_seconds": 60
        },
        "notification_channels": {
            "slack_webhook": "${SLACK_WEBHOOK_URL}",
            "sns_topic_arn": "arn:aws:sns:us-west-2:${AWS_ACCOUNT_ID}:genesis-critical-alerts",
            "pagerduty_key": "${PAGERDUTY_API_KEY}"
        }
    },
    "monitoring_configuration": {
        "health_endpoints": [
            "/health/ready",
            "/health/live",
            "/metrics"
        ],
        "alerting_thresholds": {
            "backup_failure_count": 1,
            "replication_lag_minutes": 10,
            "failover_duration_minutes": 20,
            "disk_usage_percent": 85,
            "memory_usage_percent": 90
        },
        "metrics_collection": {
            "prometheus_enabled": true,
            "cloudwatch_enabled": true,
            "grafana_dashboards": true,
            "export_interval_seconds": 60
        }
    },
    "security_configuration": {
        "encryption_at_rest": true,
        "encryption_in_transit": true,
        "backup_encryption": {
            "enabled": true,
            "algorithm": "AES-256-GCM",
            "key_derivation": "PBKDF2"
        },
        "access_controls": {
            "backup_access_role": "genesis-backup-role",
            "restore_access_role": "genesis-restore-role",
            "admin_access_role": "genesis-admin-role"
        },
        "audit_logging": {
            "enabled": true,
            "log_location": "/var/log/genesis/audit.log",
            "retention_days": 2555
        }
    },
    "testing_configuration": {
        "automated_testing": {
            "backup_validation_enabled": true,
            "restore_testing_enabled": true,
            "failover_testing_enabled": true
        },
        "test_schedules": {
            "backup_validation": "every_2_hours",
            "restore_testing": "daily_at_02:00",
            "failover_testing": "monthly_first_saturday"
        },
        "test_environments": {
            "validation_db_host": "mysql-test",
            "validation_redis_host": "redis-test",
            "isolated_network": true
        }
    },
    "compliance_configuration": {
        "data_classification": {
            "automatic_classification": true,
            "pii_detection": true,
            "compliance_tagging": true
        },
        "retention_policies": {
            "gdpr_retention_days": 2555,
            "sox_retention_days": 2555,
            "hipaa_retention_days": 2555,
            "pci_retention_days": 365
        },
        "legal_hold": {
            "enabled": true,
            "registry_location": "/var/backups/genesis/legal_hold_registry.json",
            "notification_required": true
        },
        "right_to_erasure": {
            "enabled": true,
            "secure_deletion_passes": 3,
            "crypto_shredding": true,
            "deletion_certificates": true
        }
    },
    "recovery_procedures": {
        "automated_recovery": {
            "database_point_in_time": true,
            "redis_snapshot_restore": true,
            "application_rollback": true
        },
        "manual_procedures": {
            "escalation_contacts": [
                "primary_oncall@company.com",
                "secondary_oncall@company.com",
                "devops_lead@company.com"
            ],
            "runbook_location": "/opt/genesis/scripts/backup/disaster_recovery_runbooks.md",
            "command_reference": "/opt/genesis/scripts/backup/README.md"
        }
    },
    "validation_settings": {
        "integrity_checks": {
            "checksum_verification": true,
            "encryption_validation": true,
            "metadata_validation": true
        },
        "restore_testing": {
            "partial_restore_enabled": true,
            "full_restore_testing": false,
            "test_data_limit": 1000
        },
        "performance_targets": {
            "backup_completion_time_minutes": 30,
            "validation_completion_time_minutes": 15,
            "restore_initiation_time_minutes": 5
        }
    }
}