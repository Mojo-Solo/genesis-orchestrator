# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=genesis-orchestrator-queue

# Database Configuration  
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=genesis_orchestrator
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Monitoring
ENABLE_MONITORING=true
ENABLE_META_LEARNING=true
LOG_LEVEL=INFO

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=genesis-orchestrator
OTEL_METRICS_EXPORTER=prometheus
OTEL_TRACES_EXPORTER=jaeger

# Security
AUDIT_LOG_DRIVER=database
ENABLE_PII_REDACTION=true
ENABLE_HMAC_VALIDATION=true
HMAC_SECRET_KEY=

# Vault Configuration
VAULT_DRIVER=hashicorp
VAULT_URL=http://127.0.0.1:8200
VAULT_TOKEN=
VAULT_VERSION=v1
VAULT_TIMEOUT=30
VAULT_VERIFY_SSL=true
VAULT_NAMESPACE=genesis
VAULT_AUTH_METHOD=token
VAULT_ROLE_ID=
VAULT_SECRET_ID=
VAULT_JWT=
VAULT_ROLE=genesis-orchestrator

# Vault Features
VAULT_ROTATION_ENABLED=true
VAULT_DEFAULT_TTL=2592000
VAULT_WARNING_THRESHOLD=604800
VAULT_AUTO_ROTATE=true
VAULT_ROTATION_SCHEDULE="0 2 * * 0"
VAULT_RBAC_ENABLED=true
VAULT_AUDIT_ENABLED=true
VAULT_AUDIT_REQUESTS=true
VAULT_AUDIT_RESPONSES=false
VAULT_ENCRYPTION_ENABLED=true
VAULT_HEALTH_CHECKS=true
VAULT_HEALTH_INTERVAL=60

# Webhook Security
WEBHOOK_HMAC_ENABLED=true
WEBHOOK_REPLAY_PROTECTION=true
WEBHOOK_MAX_TIMESTAMP_SKEW=300
WEBHOOK_REQUIRE_TIMESTAMP=false
WEBHOOK_REQUIRE_HTTPS=true
WEBHOOK_EMERGENCY_MODE=false
WEBHOOK_DEV_SKIP_HMAC=false

# Rate Limiting
RATE_LIMIT_DEFAULT_RPM=100
RATE_LIMIT_DEFAULT_BURST=20
RATE_LIMIT_ALGORITHM=sliding_window
RATE_LIMIT_WINDOW_SIZE=60
RATE_LIMIT_DYNAMIC=true
RATE_LIMIT_MAX_VIOLATIONS=10
RATE_LIMIT_BLOCK_DURATION=300
RATE_LIMIT_SKIP_DEV=false
RATE_LIMIT_STORAGE=redis
RATE_LIMIT_MONITORING=true
RATE_LIMIT_TEST_MODE=false
RATE_LIMIT_ADMIN_BYPASS_TOKEN=

# Secret Rotation
ROTATION_MAX_CONCURRENT=5
ROTATION_TIMEOUT=300
ROTATION_ROLLBACK=true
ROTATION_VALIDATE=true
ROTATION_WEBHOOK_URL=
ROTATION_REQUIRE_VAULT=true
ROTATION_WEBHOOK_ENABLED=true
ROTATION_EMAIL_ENABLED=false
ROTATION_SLACK_ENABLED=false
ROTATION_REQUIRE_MFA=false
ROTATION_REQUIRE_APPROVAL=false
ROTATION_ENCRYPT_LOGS=true
ROTATION_DRY_RUN_DEFAULT=false
ROTATION_MOCK=false

# Secret Rotation Intervals (in days)
API_KEY_ROTATION_DAYS=30
API_KEY_WARNING_DAYS=7
WEBHOOK_SECRET_ROTATION_DAYS=90
WEBHOOK_SECRET_WARNING_DAYS=14
DB_PASSWORD_ROTATION_DAYS=1
ENCRYPTION_KEY_ROTATION_DAYS=90
ENCRYPTION_KEY_WARNING_DAYS=14
JWT_SECRET_ROTATION_DAYS=7
JWT_SECRET_WARNING_DAYS=1
OAUTH_SECRET_ROTATION_DAYS=180
OAUTH_SECRET_WARNING_DAYS=30

# Monitoring & Metrics
METRICS_PROMETHEUS_ENABLED=false
METRICS_PROMETHEUS_PORT=9090

# Emergency Contacts
EMERGENCY_CONTACT=

# Backup Configuration
BACKUP_STORAGE_LOCATION=./backups

# API Keys (use GitHub Secrets in production)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PINECONE_API_KEY=